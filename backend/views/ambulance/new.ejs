<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Request Ambulance</title>
</head>
<body>
    <h1>Request Ambulance</h1>
    <p>Ambulance ID: <%= ambulanceId %></p>
    <button id="callAmbulance">Call Ambulance</button>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        document.getElementById('callAmbulance').addEventListener('click', function() {
            axios.post('/ambulance/call', {
                ambulanceId: '<%= ambulanceId %>'
            })
            .then(function (response) {
                window.location.href = `/ambulance/${response.data.ambulanceId}/track`;
            })
            .catch(function (error) {
                console.error(error);
            });
        });
    </script>
</body>
</html>
